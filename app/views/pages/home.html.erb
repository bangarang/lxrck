<section class="top" >
  <a href="<%= post_path(@post) %>">
    <h1><%= @post.title %></h1>
    <label><h5>Newest Post</h5></label>
  </a>
    <% unless @post.feeds.blank? %>
    <ul class="tags">
      <% for tag in @post.feeds %>
        <li><%= link_to "<h5>#{tag.name}</h5>".html_safe, tag %></li>
      <% end %>
    </ul>
    <% end %>
    <% if signed_in? %>
      <ul class="meta">
        <li><%= link_to 'Edit', edit_post_path(@post) %></li>
        <li><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    <% end %>
</section>

<section class="sayhi">
  <div class="goldtainer">
    
    <h3><a href="mailto:hi@lxrck.com?subject=Good Morning">Say Hi</a></h3>

  </div>
</section>


<div class="goldtainer clear">
  <h3 class="feedtitle">Active Feeds</h3>
<% pics = [] %>
  <% @feeds.each do |feed| %>
    <% pics.push(feed) %>
  <% end %>


      <% if pics.length == 1 %> 
        <section class="gallery clear" >
          <% feed = pics.pop %>
            <article class="tag"<% if feed.photo %> style="background-image: url(<%= feed.photo.image_url %>);"<% end %>> 
              <a href="<%= feed_path(feed) %>"> 
              <header>
                <div class="overlay"></div>
                <h2><%= feed.name %></h2>
                <aside>
                  <% if feed.description %>
                  <div class="content">
                    <%= markdown feed.description  %>
                  </div>
                  <% end %>
                </aside>
                <% if signed_in? %>
                  <p class="meta">
                    <%= link_to 'Edit', edit_feed_path(feed) %> | <%= link_to 'Back', feeds_path %> | <%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </p>
                <% end %>
              </header>
              </a>
            </article>
        <% else %>

        <% until pics.empty? %>


          <% j = pics.length %>
          <% a = 3 %>
          <% if j % 2 == 0 then a = 2 end %>
          <% if j % 3 == 0 then a = 3 end %>
         


          <section class="gallery<%= a %> clear">

            <% for feed in pics.pop(a) %>
              <article class="tag"<% if feed.photo %> style="background-image: url(<%= feed.photo.image_url %>);"<% end %>> 
                <a href="<%= feed_path(feed) %>"> 
                <header>
                  <div class="overlay"></div>
                  <h2><%= feed.name %></h2>
                  <aside>
                    <% if feed.description %>
                    <div class="content">
                      <%= markdown feed.description  %>
                    </div>
                    <% end %>
                  </aside>
                  <% if signed_in? %>
                    <p class="meta">
                      <%= link_to 'Edit', edit_feed_path(feed) %> | <%= link_to 'Back', feeds_path %> | <%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </p>
                  <% end %>
                </header>
                </a>
              </article>
            <% end %>
          </section>
        <% end %>
  <% end %>
</div>
<% if Rails.env.production? %>
  <%= javascript_tag do %>
    mixpanel.track('Viewed Home Page');
  <% end %>
<% end %>