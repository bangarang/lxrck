<section class="top"<% if @post.image %> style="background-image: url(<%= @post.image_url %>);"<% end %> >
  <a href="<%= post_path(@post) %>">
    <h1><%= @post.title %></h1>
    <label><h5>Newest Post</h5></label>
  </a>
    <% unless @post.tags.blank? %>
    <ul class="tags">
      <% for tag in @post.tags %>
        <li><%= link_to "<h5>#{tag.name}</h5>".html_safe, tag %></li>
      <% end %>
    </ul>
    <% end %>
    <% if signed_in? %>
      <ul class="meta">
        <li><%= link_to 'Edit', edit_post_path(@post) %></li>
        <li><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    <% end %>
</section>

<h3 class="feedtitle">Active Feeds</h3>


<div class="goldtainer clear">
<% pics = [] %>
  <% @tags.each do |tag| %>
    <% pics.push(tag) %>
  <% end %>


      <% if pics.length == 1 %> 
        <section class="gallery clear" >
          <% tag = pics.pop %>
            <article class="tag"<% if tag.photo %> style="background-image: url(<%= tag.photo.image_url %>);"<% end %>> 
              <a href="<%= tag_path(tag) %>"> 
              <header>
                <div class="overlay"></div>
                <h2><%= tag.name %></h2>
                <aside>
                  <% if tag.description %>
                  <div class="content">
                    <%= markdown tag.description  %>
                  </div>
                  <% end %>
                </aside>
                <% if signed_in? %>
                  <p class="meta">
                    <%= link_to 'Edit', edit_tag_path(tag) %> | <%= link_to 'Back', tags_path %> | <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </p>
                <% end %>
              </header>
              </a>
            </article>
        <% else %>

        <% until pics.empty? %>


          <% j = pics.length %>
          <% a = 3 %>
          <% if j % 2 == 0 then a = 2 end %>
          <% if j % 3 == 0 then a = 3 end %>
          <% if j % 4 == 0 then a = 4 end %>


          <section class="gallery<%= a %> clear">

            <% for tag in pics.pop(a) %>
              <article class="tag"<% if tag.photo %> style="background-image: url(<%= tag.photo.image_url %>);"<% end %>> 
                <a href="<%= tag_path(tag) %>"> 
                <header>
                  <div class="overlay"></div>
                  <h2><%= tag.name %></h2>
                  <aside>
                    <% if tag.description %>
                    <div class="content">
                      <%= markdown tag.description  %>
                    </div>
                    <% end %>
                  </aside>
                  <% if signed_in? %>
                    <p class="meta">
                      <%= link_to 'Edit', edit_tag_path(tag) %> | <%= link_to 'Back', tags_path %> | <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </p>
                  <% end %>
                </header>
                </a>
              </article>
            <% end %>
          </section>
        <% end %>
  <% end %>
</div>