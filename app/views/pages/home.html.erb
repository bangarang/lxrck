<div class="goldtainer clear">
  <article class="post home">
    <header>
      <label><h5>Newest Post</h5></label>
      <a href="<%= post_path(@post) %>"><div class="overlay"></div></a>
      <div class="float">
        <div class="inner">
          <aside class="meta">
            <h1><%= link_to @post.title, @post %></h1>
          </aside>
        </div>
      </div>
    </header> 
    <% if @post.tags %>
    <p class="tags">
      <% for tag in @post.tags %>
        <%= link_to tag.name, tag %>
      <% end %>
    </p>
    <% end %>
    <% if signed_in? %>
        <p class="meta">
          <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      <% end %>
    <div class="content">
      <%= image_tag @post.image_url(:medium) %>
    </div>
  </article>
  <div class="divider"></div>
</div>

<div class="goldtainer clear">
  <h3>Active Feeds</h3>
</div>
<div class="goldtainer clear">
  <% @tags.each do |tag| %>
  
  <article class="tag"<% if tag.photo %> style="background-image: url(<%= tag.photo.image_url(:thumb) %>);"<% end %>> 
    <a href="<%= tag_path(tag) %>"> 
    <header>
      <div class="overlay"></div>
      <h2><%= tag.name %></h2>

      
      <aside>
        <% if tag.description %>
        <div class="content">
          <%= markdown tag.description  %>
        </div>
        <% end %>
      </aside>
      
      <% if signed_in? %>
        <p class="meta">
          <%= link_to 'Edit', edit_tag_path(tag) %> | <%= link_to 'Back', tags_path %> | <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      <% end %>
    </header>
    </a>
  </article>
  <% end %>
</div>