<div class="goldtainer clear">
  <h3 class="feedtitle">Active Feeds</h3>
<% pics = [] %>
  <% @feeds.each do |feed| %>
    <% pics.push(feed) %>
  <% end %>


      <% if pics.length == 1 %> 
        <section class="gallery clear" >
          <% feed = pics.pop %>
            <article class="tag"<% if feed.photo %> style="background-image: url(<%= feed.photo.image_url(:thumb) %>);"<% end %>> 
              <a href="<%= tangent_path(feed) %>"> 
              <header>
                <div class="overlay"></div>
                <h2><%= feed.name %></h2>
                <aside>
                  <% if feed.description %>
                  <div class="content">
                    <%= markdown feed.description  %>
                  </div>
                  <% end %>
                </aside>
                <% if signed_in? %>
                  <p class="meta">
                    <%= link_to 'Edit', edit_tangent_path(feed) %> | <%= link_to 'Back', tangents_path %> | <%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </p>
                <% end %>
              </header>
              </a>
            </article>
        <% else %>

        <% until pics.empty? %>


          <% j = pics.length %>
          <% a = 3 %>
          <% if j % 2 == 0 then a = 2 end %>
          <% if j % 3 == 0 then a = 3 end %>
         


          <section class="gallery<%= a %> clear">

            <% for feed in pics.pop(a) %>
              <article class="tag"<% if feed.photo %> style="background-image: url(<%= feed.photo.image_url(:thumb) %>);"<% end %>> 
                <a href="<%= tangent_path(feed) %>"> 
                <header>
                  <div class="overlay"></div>
                  <h2><%= feed.name %></h2>
                  <aside>
                    <% if feed.description %>
                    <div class="content">
                      <%= markdown feed.description  %>
                    </div>
                    <% end %>
                  </aside>
                  <% if signed_in? %>
                    <p class="meta">
                      <%= link_to 'Edit', edit_tangent_path(feed) %> | <%= link_to 'Back', tangents_path %> | <%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </p>
                  <% end %>
                </header>
                </a>
              </article>
            <% end %>
          </section>
        <% end %>
  <% end %>
</div>
