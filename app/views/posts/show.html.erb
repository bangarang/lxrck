<div class="goldtainer">
  <p id="notice"><%= notice %></p>

<article class="post">
    <header>
      <div class="overlay"></div>
      <div class="float">
        <div class="inner">
          <aside class="meta">
            <h2><%= @post.title %></h2>
            <p class="updated"><%= @post.updated_at.strftime("%B %d").html_safe %> 
            <% if @post.tags %>
             | 
            <% for tag in @post.tags %>
                <%= link_to tag.name, tag %>
            <% end %>
            </p>
            <% end %>
          </aside>
        </div>
      </div>
    </header> 
    <% if signed_in? %>
        <p class="meta">
          <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      <% end %>
    <div class="content">
      <%= image_tag @post.image_url(:medium) %>
    </div>
  </article>

  <article class="post main"> 
    <div class="content">
      <%= markdown @post.content %>
    </div>
  </article>
</div>