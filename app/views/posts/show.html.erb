<section class="top post">
    <header>
      <h1><%= @post.title %></h1>
    </header>
    <% unless @post.feeds.blank? %>
    <ul class="tags">
      <% for feed in @post.feeds %>
        <li><%= link_to "<h5>#{feed.name}</h5>".html_safe, feed %></li>
      <% end %>
    </ul>
    <% end %>
    <% if signed_in? %>
      <ul class="meta">
        <li><%= link_to 'Edit', edit_post_path(@post) %></li>
        <li><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    <% end %>
</section>

<div class="goldtainer">
  <% if notice %><p id="notice"><%= notice %></p><% end %>

  <article class="post main"> 
    <div class="content">
      <%= markdown @post.content %>
    </div>
  </article>
</div>

<% if Rails.env.production? %>
  <%= javascript_tag do %>
    mixpanel.track('Viewed <%= @post.title %>');
  <% end %>
<% end %>