<div class="goldtainer">
  <h1 class="title">Photos</h1>
  <%= link_to 'New Photo', new_photo_path %>

  <% @photos.each do |photo| %>
  <article class="photo"> 
    <div class="content">
      <h2><%= link_to photo.name, photo %> </h2>
      <aside class="meta">
        <p class="meta">
          <%= link_to 'Edit', edit_photo_path(photo) %> | <%= link_to 'Back', photos_path %> | <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
        <% if photo.tags %>
        <p class="tags">
            <% for tag in photo.tags %>
                <%= link_to tag.name, tag %>
            <% end %>
        </p>
        <% end %>
      </aside>
      <%= image_tag photo.image.url(:medium) %>
    </div>
  </article>
  <% end %>
</div>