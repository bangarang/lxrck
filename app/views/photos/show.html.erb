<% provide(:body_class, "top") %>
<% if notice %><p id="notice"><%= notice %></p><% end %>
<div class="goldtainer">	
  <h2 class="title"><%= @photo.name %> </h2>
  <article class="photo">
    <header>
      <div class="overlay"></div>
      <div class="float">
        <div class="inner">
          <aside class="meta">
            <%= link_to "Download in High Resolution", @photo.image_url %>
          </aside>
        </div>
      </div>
    </header> 
    <% if signed_in? %>
        <p class="meta">
          <%= link_to 'Edit', edit_photo_path(@photo) %> | <%= link_to 'Destroy', @photo, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      <% end %>
    <div class="content">
      <%= image_tag @photo.image_url %>
    </div>
  </article>
  <% if signed_in? %>
  <p class="tags">
    Image URL: <%= @photo.image_url %>
  </p>
  <% end %>

  <% if @photo.tangents %>
  <p class="ftags">
    <% for tangent in @photo.tangents %>
        <%= link_to tangent.name, tangent %>
    <% end %>
  </p>
  <% end %>
</div>

<% if Rails.env.production? %>
  <%= javascript_tag do %>
    mixpanel.track('Viewed <%= @photo.name %>');
  <% end %>
<% end %>