
<div class="togger clear">
  <%= link_to 'New Tag', new_tag_path unless !signed_in? %>
</div>
<div class="goldtainer clear">
  <% i = 0 %>
  <% @tags.each do |tag| %>
  
  <article class="tag"<% if tag.photo %> style="background-image: url(<%= tag.photo.image.url(:medium) %>);"<% end %>> 
    <a href="<%= tag_path(tag) %>"> 
    <header>
      <div class="overlay"></div>
      <h2><%= tag.name %></h2>

      
      <aside>
        <% if tag.description %>
        <div class="content">
          <%= markdown tag.description  %>
        </div>
        <% end %>
      </aside>
      
      <% if signed_in? %>
        <p class="meta">
          <%= link_to 'Edit', edit_tag_path(tag) %> | <%= link_to 'Back', tags_path %> | <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      <% end %>
    </header>
    </a>
  </article>
    <% i = i +1 %>
    <% if i % 4 == 0 %>
      </div>
      <div class="goldtainer clear">
    <%end %>
  <% end %>
</div>