<% provide(:body_class, "top") %>
<h2 class="tangenttitle">All tangents</h2>
<% if signed_in? %>
<div class="togger clear">
  <%= link_to 'New tangent', new_tangent_path %>
</div>
<% end %>
<div class="goldtainer clear">
<% pics = [] %>
  <% @tangents.each do |tangent| %>
    <% pics.push(tangent) %>
  <% end %>
  <% if pics.length == 1 %> 
        <section class="gallery clear" >
          <% tangent = pics.pop %>
            <article class="tag"<% if tangent.photo %> style="background-image: url(<%= tangent.photo.image_url %>);"<% end %>> 
              <a href="<%= tangent_path(tangent) %>"> 
              <header>
                <div class="overlay"></div>
                <h2><%= tangent.name %></h2>
                <aside>
                  <% if tangent.description %>
                  <div class="content">
                    <%= markdown tangent.description  %>
                  </div>
                  <% end %>
                </aside>
                <% if signed_in? %>
                  <p class="meta">
                    <%= link_to 'Edit', edit_tangent_path(tangent) %> | <%= link_to 'Back', tangents_path %> | <%= link_to 'Destroy', tangent, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </p>
                <% end %>
              </header>
              </a>
            </article>
        <% else %>

        <% until pics.empty? %>


          <% j = pics.length %>
          <% a = 3 %>
          <% if j % 2 == 0 then a = 2 end %>
          <% if j % 3 == 0 then a = 3 end %>


          <section class="gallery<%= a %> clear">

            <% for tangent in pics.pop(a) %>
              <article class="tag"<% if tangent.photo %> style="background-image: url(<%= tangent.photo.image_url %>);"<% end %>> 
                <a href="<%= tangent_path(tangent) %>"> 
                <header>
                  <div class="overlay"></div>
                  <h2><%= tangent.name %></h2>
                  <aside>
                    <% if tangent.description %>
                    <div class="content">
                      <%= markdown tangent.description  %>
                    </div>
                    <% end %>
                  </aside>
                  <% if signed_in? %>
                    <p class="meta">
                      <%= link_to 'Edit', edit_tangent_path(tangent) %> | <%= link_to 'Back', tangents_path %> | <%= link_to 'Destroy', tangent, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </p>
                  <% end %>
                </header>
                </a>
              </article>
            <% end %>
          </section>
        <% end %>
  <% end %>
</div>

<% if Rails.env.production? %>
  <%= javascript_tag do %>
    mixpanel.track('Viewed tangent Index');
  <% end %>
<% end %>